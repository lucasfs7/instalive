@import 'vendor/bootstrap.min.css'
@import 'variables'
@import 'mixins'

html,
body
  margin 0
  padding 0

body
  background #eaeaea
  font-family 'lucida grande', Helvetica, Arial, sans-serif
  color #333

a
  color #ed6633
  text-decoration none

#app
  width 100%
  height 100%

  #header
    height 90px
    margin appMargins
    position relative

    h1
      height 90px
      float left

      img
        height: 100%;
        display: block;

    h2
      margin: 27px 0 0 20px;
      float: left;

  #gallery
    margin 0 5px appMargins 5px
    overflow hidden

    #images-list
      width 100%
      list-style none
      margin 0
      padding 0

      li
        width 20%
        float left

        figure
          margin 0
          padding 0

        a,
        img
          display block

        img
          width 90%
          margin 5%
          bw 80%

        &:hover img
          bw 0

